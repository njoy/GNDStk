{
    "namespace": "atom",

    "PoPs": {
        "metadata": {
            "name": {
                "type": "string",
                "required": true
            },
            "version": {
                "type": "string",
                "required": true
            },
            "format": {
                "type": "string",
                "required": true
            }
        },
        "children": {
            "styles": {
                "times": "1",
                "required": true
            },
            "chemicalElements": {
                "times": "1",
                "required": true
            }
        }
    },

    "atomic": {
        "children": {
            "configurations": {
                "times": "1",
                "required": true
            }
        }
    },

    "configurations": {
        "children": {
            "configuration": {
                "times": "1+",
                "required": true
            }
        }
    },

    "configuration": {
        "metadata": {
            "subshell": {
                "type": "string",
                "required": true
            },
            "electronNumber": {
                "type": "double", "//":"is 'double' always correct for this?",
                "required": true
            }
        },
        "children": {
            "bindingEnergy": {
                "times": "1",
                "required": true
            },
            "decayData": {
                "namespace": "common",
                "times": "1+",
                "required": true
            }
        }
    },

    "bindingEnergy": {
        "children": {
            "double": {
                "times": "1",
                "namespace": "common",
                "required": true
            }
        }
    }
}
